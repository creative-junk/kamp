</style>
    <h2>Individual Membership</h2>

    {{ form_start(onboardForm) }}

        <div class="row">
            <div class="">
                <div class="panel registration-form">
                    <div class="panel-body">

                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    {{ form_row(onboardForm.idNumber,{
                                        'label': 'ID/Passport/Birth Cert no.'
                                    }) }}
                                    <div class="form-control-feedback">
                                        <i class="icon-user-plus text-muted"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    {{ form_row(onboardForm.firstName) }}
                                    <div class="form-control-feedback">
                                        <i class="icon-user-check text-muted"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    {{ form_row(onboardForm.lastName) }}
                                    <div class="form-control-feedback">
                                        <i class="icon-user-check text-muted"></i>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    {{ form_row(onboardForm.email.first,{
                                        'label': 'Your Email'
                                    }) }}
                                    <div class="form-control-feedback">
                                        <i class="icon-mention text-muted"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    {{ form_row(onboardForm.email.second,{
                                        'label': 'Repeat Email'
                                    }) }}
                                </div>
                                <div class="form-control-feedback">
                                    <i class="icon-mention text-muted"></i>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="checkbox">
                                        {{ form_row(onboardForm.termsOfService,{
                                            'label': 'Accept Terms of Service'
                                        }) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="">
                            <button type="submit" style="background-color: #e22532;text-align: left" class="btn bg-teal-400 btn-labeled btn-labeled-left ml-6" formnovalidate><b><i
                                            class="fa fa-plus-circle"></i></b> Register
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <!-- /registration form -->


    {{ form_end(onboardForm) }}
